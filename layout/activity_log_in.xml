<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogIn">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@color/greyMattersPurple"
            android:id="@+id/background_register"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email" android:layout_marginTop="400dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:hint="@string/email"
            android:background="#FFF" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="84dp" android:layout_marginBottom="300dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/email" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:hint="@string/password"
            android:background="#FFF" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="@+id/background_register"
            android:layout_marginRight="84dp"/>
    <ImageView
            android:layout_width="239dp"
            android:layout_height="236dp" app:srcCompat="@mipmap/grey_matters_logo_round"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@+id/background_register" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/email" app:layout_constraintVertical_bias="0.81"/>
    <Button
            android:text="@string/log_in_button"
            android:layout_width="98dp"
            android:layout_height="58dp"
            android:id="@+id/sign_in_button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp"
            android:background="#884488"
            android:textColor="#FFF"
            android:layout_marginEnd="156dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="156dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/register_link"
            android:text="@string/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:focusable="true"
            android:textColor="#99CCFF"
            android:textSize="16sp"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/sign_in_button"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>