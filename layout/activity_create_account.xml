<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogIn">
    <ImageView
            android:id="@+id/background_register"
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@color/greyMattersPurple"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <EditText
            android:id="@+id/register_name"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/register_name"
            android:background="#FFF" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/background_register"
            android:layout_marginBottom="50dp" app:layout_constraintBottom_toBottomOf="@+id/background_register"
            android:layout_marginTop="5dp"
            app:layout_constraintVertical_bias="0.405"/>
    <EditText
            android:id="@+id/register_email"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/register_email"
            android:background="#FFF" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/register_name"/>
    <EditText
            android:id="@+id/register_password"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/register_password"
            android:background="#FFF" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="@+id/background_register"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/register_email"/>
    <EditText
            android:id="@+id/confirm_password"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/confirm_password"
            android:background="#FFF" android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="@+id/background_register"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/register_password"/>
    <ImageView
            android:id="@+id/register_logo"
            android:layout_width="163dp"
            android:layout_height="160dp" app:srcCompat="@mipmap/grey_matters_logo_round"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/background_register" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"
            app:layout_constraintBottom_toTopOf="@+id/register_name"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="30dp"/>
    <Button
            android:id="@+id/register_button"
            android:text="@string/register_button"
            android:layout_width="240dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp"
            android:background="#884488"
            android:textColor="#FFF"
            android:layout_marginEnd="156dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/confirm_password"/>
</androidx.constraintlayout.widget.ConstraintLayout>